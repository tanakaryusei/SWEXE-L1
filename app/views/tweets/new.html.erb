<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
   <% @tweet.errors.full_messages.each do |book| %>
    <li><%= book %></li>
   <% end %>
</ul>
<% end %>

<%= form_for @tweet , url: {action: :create} do |f| %>
<%= f.label :message, 'メッセージ' %>
<%= f.text_field :message %>
<%= f.submit '登録' %>
<% end %>
